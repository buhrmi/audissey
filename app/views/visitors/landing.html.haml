.section.landing_head
  .container
    .big= t 'BOOKING MADE EASY'
    .small= t 'Hire the artists you really love'
    %p
      %i.fa.fa-play
      = t 'How does it work?'
  .search_box
    .contfainer<
      %span.part.first>= t "I'm looking for"
      %select.part.select2.category(name="category" data-search="false")= options_from_collection_for_select(Category.all, :id, :name)
      %span.part.event>= t 'for an event on'
      %input.part.datepicker>
      %button= t 'Search'
.section.featured_bookable
  .container
    %h1= t 'A TRACK RECORD OF AWESOME'
    %h2= t 'Featured acts available for booking in Tokyo'
    .row
      - @performers.each do |performance|
        .col-sm-6
          .embed-responsive.embed-responsive-4by3
            = link_to performance do
              .offering.embed-responsive-item{:style => "background-image: url(#{performance.image&.thumb('400x300')&.url})"}
                .name
                  %i.fa.fa-star
                  = performance.actionable_name

.section.featured_events
  .container
    %h1= t 'UPCOMING IN TOKYO'
    %h2= t 'Events powered by audissey'
    %p Nothing here. Check back soon.
