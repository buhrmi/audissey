!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:property=>"og:url", :content=>"http://bassmusic.tokyo"}
    %meta{:property=>"og:type", :content=>"website"}
    %meta{:property=>"og:title", :content=>"Bass Music Tokyo"}
    %meta{:property=>"og:description", :content=>"Musicians, DJs, Performers, Booking Platform"}
    %meta{:property=>"og:image", :content=>"http://bassmusic.tokyo/logo.png"}
    %title Bass Music Tokyo
    -# = stylesheet_link_tag    '//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'
    = stylesheet_link_tag    '//cdn.jsdelivr.net/bootstrap/latest/css/bootstrap.css'
    = javascript_include_tag '//cdn.jsdelivr.net/momentjs/latest/moment.min.js'


    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-default
      .container
        .navbar-header
          .navbar-brand
            -# = image_tag 'logo.png', :height => '22'
            Bass Music Tokyo
        %ul.nav.navbar-right
          - if current_user
            = link_to 'Dashboard', dashboard_path
            |
            = link_to 'Logout', destroy_user_session_path, :method=>'delete'
          - else
            %li= link_to 'Log In', new_user_session_path
    #content
      - if flash[:notice]
        .container
          .notice= flash[:notice]
      = yield

    #footer
      .container
        %p.right  Terms & Conditions | Privacy Policy
        %p Â© Bass Music Tokyo, All Rights Reserved
