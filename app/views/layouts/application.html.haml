!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:property=>"og:url", :content=>"http://bassmusic.tokyo"}
    %meta{:property=>"og:type", :content=>"website"}
    %meta{:property=>"og:title", :content=>"Bass Music Tokyo"}
    %meta{:property=>"og:description", :content=>"We bring the bass."}
    %meta{:property=>"og:image", :content=>"http://bassmusic.tokyo/logo.png"}
    %title Bass Music Tokyo
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    #top_bar
      .wrapped
        .links
          - if current_user
            = link_to 'Dashboard', dashboard_path
            |
            = link_to 'Logout', destroy_user_session_path, :method=>'delete'
          - else
            = link_to 'Log In', new_user_session_path
        %h1
          = image_tag 'logo.png', :height => '22'
          Bass Music Tokyo
    #content
      - if flash[:notice]
        .wrapped
          .notice= flash[:notice]
      = yield

    #footer
      .wrapped
        %p.right  Terms & Conditions | Privacy Policy
        %p Â© Bass Music Tokyo, All Rights Reserved
